{
  "name": "franc",
  "description": "Monorepo for franc packages",
  "license": "MIT",
  "repository": "https://github.com/wooorm/franc",
  "bugs": "https://github.com/wooorm/franc/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "devDependencies": {
    "alpha-sort": "^2.0.0",
    "browserify": "^16.0.0",
    "esmangle": "^1.0.0",
    "execa": "^0.10.0",
    "format": "^0.2.2",
    "human-format": "^0.10.0",
    "is-hidden": "^1.1.0",
    "iso-639-3": "^1.0.0",
    "lerna": "^2.0.0",
    "negate": "^1.0.0",
    "nyc": "^11.0.0",
    "parse-author": "^2.0.0",
    "prettier": "^1.12.1",
    "remark-cli": "^5.0.0",
    "remark-lint-no-heading-punctuation": "^1.0.0",
    "remark-lint-no-html": "^1.0.0",
    "remark-lint-table-pipe-alignment": "^1.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "remark-stringify": "^5.0.0",
    "speakers": "^1.0.0",
    "tape": "^4.6.0",
    "trigrams": "^4.0.0",
    "udhr": "^4.0.0",
    "unicode-7.0.0": "^0.7.0",
    "unified": "^6.1.1",
    "unist-builder": "^1.0.2",
    "xo": "^0.20.0",
    "xtend": "^4.0.1"
  },
  "scripts": {
    "prepublish": "lerna bootstrap",
    "generate": "node script/build",
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build-bundle-s": "browserify packages/franc-min -s franc | esmangle > franc-min.js",
    "build-bundle-m": "browserify packages/franc -s franc | esmangle > franc.js",
    "build-bundle-l": "browserify packages/franc-all -s franc | esmangle > franc-all.js",
    "build-bundle": "npm run build-bundle-s && npm run build-bundle-m && npm run build-bundle-l",
    "build": "npm run build-bundle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run generate && npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "camelcase": "off",
      "max-lines": "off",
      "guard-for-in": "off",
      "no-var": "off",
      "prefer-arrow-callback": "off",
      "object-shorthand": "off",
      "unicorn/no-hex-escape": "off",
      "no-self-compare": "off"
    },
    "ignores": [
      "franc-all.js",
      "franc-min.js",
      "franc.js"
    ]
  },
  "remarkConfig": {
    "settings": {
      "paddedTable": false
    },
    "plugins": [
      "preset-wooorm",
      [
        "remark-lint-table-pipe-alignment",
        false
      ],
      [
        "remark-lint-no-html",
        false
      ],
      [
        "remark-lint-no-heading-punctuation",
        false
      ]
    ]
  }
}
